#!/bin/bash
#
# Ouroboros Pre-Commit Hook
# Runs tests before allowing commits
#
# Install: cp scripts/git-hooks/pre-commit .git/hooks/pre-commit && chmod +x .git/hooks/pre-commit

set -e

echo ""
echo "=========================================="
echo "  ðŸ OUROBOROS PRE-COMMIT CHECK"
echo "=========================================="
echo ""

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Check if bb is available
if ! command -v bb &> /dev/null; then
    echo -e "${RED}âœ— babashka (bb) not found${NC}"
    echo "  Install: https://github.com/babashka/babashka#installation"
    exit 1
fi

echo "Running test suite..."
echo ""

# Run tests
if bb test; then
    echo ""
    echo -e "${GREEN}âœ“ All tests passed${NC}"
    echo "  Proceeding with commit..."
    echo ""
    exit 0
else
    echo ""
    echo -e "${RED}âœ— Tests failed${NC}"
    echo "  Fix tests before committing."
    echo ""
    echo "  To bypass (not recommended):"
    echo "    git commit --no-verify"
    echo ""
    exit 1
fi
